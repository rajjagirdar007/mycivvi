<!doctype html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>MPENGS Admin</title>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!-- Favicons -->
<link rel="apple-touch-icon" href="/docs/5.1/assets/img/favicons/apple-touch-icon.png" sizes="180x180">
<link rel="icon" href="/docs/5.1/assets/img/favicons/favicon-32x32.png" sizes="32x32" type="image/png">
<link rel="icon" href="/docs/5.1/assets/img/favicons/favicon-16x16.png" sizes="16x16" type="image/png">
<link rel="manifest" href="/docs/5.1/assets/img/favicons/manifest.json">
<link rel="mask-icon" href="/docs/5.1/assets/img/favicons/safari-pinned-tab.svg" color="#7952b3">
<link rel="icon" href="/docs/5.1/assets/img/favicons/favicon.ico">
<meta name="theme-color" content="#7952b3">


    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
          main{
        margin: 0 auto;

      }
    </style>

    
    <!-- Custom styles for this template -->
    <link href="/css/admin.css" rel="stylesheet">
  </head>
  <body>
    


    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
	      <h1 class="h2">Admin {{username}}</h1>
	      <p> </p>
        <div class="btn-toolbar mb-2 mb-md-0">
        </div>
      </div>

      <a href="/administrator/viewcareer" class="btn btn-secondary">Back to Careers</a>
      <p> </p>
      <form action="/administrator/addcareer" method="POST">
	    <div class="form-group">
		    <label for="jtitle">Job Title</label>
		    <input id="jtitle" type="text" class="form-control" placeholder="Job Title" name="title" required>
	    </div>
	    <div class="form-group">
		  <label for="jloc">Location</label>
		  <input id="jloc" class="form-control" type="text" placeholder="Location of Job" name="location" required>
	    </div>
	    <div class="form-group">
		  <label for="jexp">Experience</label>
		  <input id="jexp" class="form-control" type="text" placeholder="Industry Related Experience" name="experience" required>
	    </div>
	    <div class="form-group">
		  <label for="jskills">Key Skills</label>
		  <input id="jskills" class="form-control" type="text" placeholder="Industry Related Skills" name="key_skills" required>
	    </div>
	    <div class="form-group">
		  <label for="jdesc">Description</label>
		  <textarea id="jdesc" class="form-control" placeholder="Position Description" name="desc" required></textarea>

		  <p> </p>
	  <button type="submit" class="btn btn-primary">Submit</button>
    </form>

	

    </main>
	<script src = "/js/bootstrap/bootstrap.bundle.min.js"></script>
  </body>
</html>








